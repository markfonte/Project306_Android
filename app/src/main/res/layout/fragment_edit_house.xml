<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="example.com.project306.ui.main.EditHouseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ten_percent_vertical_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ninety_percent_vertical_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".9" />

        <TextView
            android:id="@+id/edit_house_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/savoye_let_plain"
            android:gravity="center"
            android:text="@{viewModel.displayName}"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textSize="@dimen/main_title_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_house_greek_letters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:fontFamily="@font/lucida_grande_regular"
            android:gravity="center"
            android:text="@{viewModel.greekLetters}"
            android:textColor="@color/colorGreekLetters"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@id/edit_house_title" />

        <TextView
            android:id="@+id/edit_house_street_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:gravity="center"
            android:text="@{viewModel.streetAddress}"
            android:textSize="@dimen/small_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_greek_letters" />

        <TextView
            android:id="@+id/edit_house_my_values_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard"
            android:gravity="center_vertical|start"
            android:text="@string/display_values_title_default_text"
            android:textSize="@dimen/medium_font_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_street_address" />

        <CheckBox
            android:id="@+id/edit_house_value_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center_vertical|start"
            android:text="@{viewModel.valueOne}"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_my_values_title" />

        <CheckBox
            android:id="@+id/edit_house_value_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center_vertical|start"
            android:text="@{viewModel.valueTwo}"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_value_one" />

        <CheckBox
            android:id="@+id/edit_house_value_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center_vertical|start"
            android:text="@{viewModel.valueThree}"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_value_two" />

        <TextView
            android:id="@+id/edit_house_comment_prompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard"
            android:gravity="center_vertical|start"
            android:text="@string/comments"
            android:textSize="@dimen/medium_font_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_value_three" />

        <EditText
            android:id="@+id/edit_house_enter_comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:background="@drawable/edit_house_comments_background"
            android:gravity="top|start"
            android:hint="@string/edit_house_enter_comments_hint"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minLines="4"
            android:padding="@dimen/padding_standard"
            android:singleLine="false"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_comment_prompt"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/edit_house_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/button_default"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/edit_house_submit_button_text"
            android:textAllCaps="false"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintEnd_toStartOf="@+id/ninety_percent_vertical_guide"
            app:layout_constraintStart_toStartOf="@+id/ten_percent_vertical_guide"
            app:layout_constraintTop_toBottomOf="@+id/edit_house_enter_comments" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>